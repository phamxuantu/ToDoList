<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cecdcd">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_marginBottom="2dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Công việc"
            android:textColor="#3a7fc4"
            android:textSize="16sp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Di choi"
            android:id="@+id/txtNameToDo"
            android:maxLines="1"
            android:inputType="text"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_marginBottom="2dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Danh mục"
            android:textColor="#3a7fc4"
            android:textSize="16sp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerCategory"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff"
        android:layout_marginBottom="2dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Chi tiết"
            android:textColor="#3a7fc4"
            android:textSize="16sp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Hang ngay"
            android:id="@+id/txtDescriptionToDo"
            android:maxLines="1"
            android:inputType="text"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Trạng thái"
            android:textColor="#3a7fc4"
            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Chưa xong"
            android:id="@+id/txtStatusToDo"
            />

    </LinearLayout>


</LinearLayout>
